{
  "name": "__MSG_title__",
  "version": "4.0.0",
  "manifest_version": 3,
  "description": "__MSG_titleDesc__",
  "default_locale": "en",
  "icons": {
    "48": "badi19a-48.png",
    "128": "badi19a-128.png"
  },
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "third-party/dayjs.min.js",
        "third-party/utc.js"
      ]
    }
  ],
  "permissions": [
    "alarms",
    "storage",
    "notifications",
    "geolocation",
    "menus",
    "clipboardWrite",
    "tts"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "_locales/*/messages.json"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "author": "Glen Little",
  "short_name": "BadiCal",
  "incognito": "split",
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+D",
        "mac": "Command+Shift+D",
        "chromeos": "Ctrl+Shift+D",
        "linux": "Ctrl+Shift+D"
      }
    }
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "__MSG_browserActionTitle__",
    "default_icon": {
      "48": "badi19a-48.png"
    }
  }
}